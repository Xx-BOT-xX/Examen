        "come_lightside": None
    }
 ]

#A#  listado ordenado por nombre y por especie;
def burbuja(lista):
    n=len(lista)
    for i in range (n):
        for j in range(n-i-1):
            if lista.name[j] + lista.species[j] < lista.name[j+1] + lista.species[j+1]:
                aux = lista[j+1]
                lista[j] = lista[j+1]
                lista[j+1] = aux

print(burbuja(jedis))

#B# mostrar toda la información de Ahsoka Tano y Kit Fisto;

def mostrarinfo(pila, buscado):
    for dato in pila:
        if dato["nombre"] == buscado:
            print(dato)

mostrarinfo(jedis)
#C# mostrar todos los padawan de Yoda y Luke Skywalker, es decir sus aprendices;
def lospadawan(lista):
    alumnos_de_yoda=[]
    alumnos_de_luke=[]
    for padawans in lista:
        if padawans.master == "Yoda":
            alumnos_de_yoda.append(padawans.name)
        if padawans.master == "Luke Skywalker":
            alumnos_de_luke.append(padawans.name)

lospadawan(jedis)
#D# mostrar los Jedi de especie humana y twi'lek;
def especie_jedis(lista):
    jedi_humanos = []
    jedi_twi_lek = []
    
    for jedi in lista:
        if jedi.especie == "Humana":
            jedi_humanos.append(jedi.name) 
        if jedi.especie == "twi'lek":
            jedi_twi_lek.append(jedi.name)
    return {f"jedis humanos:",jedi_humanos,"jedis twi'lek:",jedi_twi_lek}
especie_jedis(jedis)



#E# Listar todos los Jedi que comienzan con A:
def comienzan_con_A(lista):
    jedi_A = []
    for jedi in lista:
        if jedi.rank == "Jedi Master":
            if jedi.nombre[0] == A:
                jedi_A.append(jedi.name)
    return jedi_A

print("Jedi que comienzan con A:", comienzan_con_A(jedis))


