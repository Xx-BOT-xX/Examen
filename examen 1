#A# Contar cuantas especies hay;
def conteoespecie(pila):
    cont=0
    for especies in pila:
        if especies == pila.especie:
            cont+=1
    return cont

conteoespecie(dinosaurios)
#B# Determinar cuantos descubridores distintos hay;
def descubridores(pila):
    cantidad = []
    for cantidad in pila:
        if cantidad not in pila.descubridor:
            cantidad.append(pila.descubridor)
    return cantidad

descubridores(dinosaurios)
#C# Mostrar todos los dinosaurios que empiecen con T;
def dino_con_t(pila):
    dinosT = [] 
    for dino in pila:
        if dino.nombre[0] == "T" or dino.nombre[0] == "t":
            dinosT.append(dino.nombre)
    return dinosT

dino_con_t(dinosaurios)
#D# Mostrar todos los dinosaurio que pesen menos de 275 Kg
def peso_menos275(pila):
    peso=[]
    for dino in pila:
        if int(dino.peso[:-3]) < 275:
            peso.append(dino.peso)
    return peso

peso_menos275(dinosaurios)
#E# Dejar en una pila aparte todos los dinosaurios que comienzan con A, Q, S;

def dino_con_t(pila):
    AQS = [] 
    for dino in pila:
        if dino.nombre[0] == "A" or dino.nombre[0] == "Q" or dino.nombre[0]=="S":
            AQS.append(dino.nombre)
    return AQS

dino_con_t(dinosaurios)



